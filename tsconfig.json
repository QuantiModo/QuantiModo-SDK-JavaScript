{
  "compilerOptions": {
    "target": "es2015",
    "lib": [ "es2015" ],
    "module": "commonjs",
    "outDir": "out",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": [
    "test/*.test.ts",
    "src/helpers/*.ts"
  ]
}
